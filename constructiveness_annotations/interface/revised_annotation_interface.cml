<div class="html-element-wrapper">

  <h2 class="html-element-wrapper">
    <span style="color: rgb(0, 0, 0);">
      <span style="font-family: Open Sans; font-size: 24px; font-style: normal; font-weight:500; font-height: 20px">
        <u>Headline</u>
      </span>
    </span>
  </h2>
  
  <p class="html-element-wrapper">
    <span style="background-color: rgb(0, 255, 255);">
      <span style="font-family: Open Sans; font-size: 20px; font-style: normal; font-weight:500; font-height: 20px">{{article_title}}</span>
    </span>
  </p>
  
  <p>
    <span style="font-family: Open Sans; font-size: 20px; font-style: normal; font-weight:500; font-height: 20px">by {{article_author}} on {{article_published_date}}</span>
  </p>
  
  <div class="collapse-container">       
    <div class="collapse-group">    
      <a target="_blank" data-toggle="collapse" data-target=" .collapse-one" class="collapse-header text-center definition">
        <span style="font-family: Open Sans; font-size: 24px; font-style: normal; font-weight:500; font-height: 20px">
          <u>Article Text (Click to expand or collapse.) </u>
        </span>
      </a>
      
      <div class="expand collapse-one collapse-body text-left">   
        <p class="html-element-wrapper">
          <span style="font-family: Open Sans; font-size: 22px; font-style: normal; font-weight:500; font-height: 20px">{{article_text}}</span>         
        </p>
      </div>  
    </div>
  </div>
  
  <p></p>
  <h2 class="html-element-wrapper">
    <span style="color: rgb(0, 0, 0);">
      <span style="font-family: Open Sans; font-size: 24px; font-style: normal; font-weight:500; font-height: 20px">
        <u>Now read the following comment posted on this article.</u>
      </span>
    </span>
  </h2>
  
  <p style="border:3px; border-style:solid; border-color:rgb(64,224,208); padding: 1em;">
    <span style="color: rgb(0, 0, 0);">
      <span style="font-family: Open Sans; font-size: 20px; font-style: normal; font-weight:500; font-height: 20px">{{comment_text}}</span>
    </span>
  </p>
  
</div>

<h2 class="html-element-wrapper">
  <span style="color: rgb(0, 0, 0);">
    <span style="font-family: Open Sans; font-size: 24px; font-style: normal; font-weight:500; font-height: 20px">
      <u>Please answer all of the following questions.</u>
    </span>
    <s></s>
  </span>
</h2>

<cml:radios label="Do you agree with the commenter's views?" validates="required" name="agree" gold="true" aggregation="agg">
  <cml:radio label="Yes" value="yes"></cml:radio>
  <cml:radio label="No" value="no"></cml:radio>
  <cml:radio label="Partially" value="partially"></cml:radio>
  <cml:radio label="No opinion" value="noopinion"></cml:radio>
</cml:radios>

<cml:checkboxes validates="required" label="Which of the following positive characteristics are present in this comment? Select all that apply." name="positive_characteristics" gold="true"> 
  <cml:checkbox label="It offers a solution to the issue(s) or problem(s) discussed in the article." value="solution"></cml:checkbox>
  <cml:checkbox label="It targets specific points from the article." value="specific_points"></cml:checkbox>
  <cml:checkbox label="Points are supported by appropriate evidence." value="evidence"></cml:checkbox>
  <cml:checkbox label="It contains a personal story or experience." value="personal_story"></cml:checkbox>
  <cml:checkbox label="It encourages other readers to participate actively in the discussion." value="dialogue"></cml:checkbox>
</cml:checkboxes>

<cml:checkboxes validates="required" label="Which of the following non-positive characteristics are present in this comment? Select all that apply." name="negative_characteristics" gold="true"> 
  <cml:checkbox label="It is not relevant to the article." value="non_relevant"></cml:checkbox> 
  <cml:checkbox label="The commenter does not respect views and beliefs different from their own." value="no_respect"></cml:checkbox>
  <cml:checkbox label="It is inflammatory." value="inflammatory"></cml:checkbox>
  <cml:checkbox label="The intention is to create positive or negative emotional response." value="emotional_response"></cml:checkbox>
  <cml:checkbox label="It is unsubstantial." value="unsubstantial"></cml:checkbox>
  <cml:checkbox label="It is sarcastic." value="sarcastic"></cml:checkbox> 
</cml:checkboxes>

<cml:radios label="Overall, would you consider this comment as a constructive comment?" validates="required" name="constructive" gold="true" aggregation="agg">
  <cml:radio label="Yes" value="yes"></cml:radio>
  <cml:radio label="No" value="no"></cml:radio>
  <cml:radio label="Not sure" value="not_sure"></cml:radio>
</cml:radios>

<hr />

<cml:ratings label="How toxic is the comment?" points="4" to="Very Toxic" from="Not Toxic" validates="required" name="crowd_toxicity_level" aggregation="all">
</cml:ratings>

<cml:textarea label="Your comments" name="crowd_comments" aggregation="all"></cml:textarea>

